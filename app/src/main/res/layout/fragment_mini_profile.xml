<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#D4D8D8"
    tools:context=".FragmentMiniProfile">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">
        <com.cthacademy.android.custom.SquareRelativeLayout
            android:id="@+id/BackBtn"
            android:layout_width="40dp"
            android:layout_height="40dp">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="50dp"
                android:layout_margin="4dp"
                android:background="@android:color/transparent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_back_arrow_black"
                    android:padding="4dp"/>
            </androidx.cardview.widget.CardView>
        </com.cthacademy.android.custom.SquareRelativeLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:scrollbarFadeDuration="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">
                    <com.cthacademy.android.custom.SquareRelativeLayout
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:padding="1dp"
                        android:background="@drawable/ic_miniprofile_gradient_border">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            app:cardCornerRadius="50dp" >
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_avatar_0"
                                android:paddingTop="12dp"/>
                        </androidx.cardview.widget.CardView>
                    </com.cthacademy.android.custom.SquareRelativeLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginHorizontal="4dp">
                        <TextView
                            android:id="@+id/Miniprofile_name"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            style="@style/AppBodyFontText"
                            android:textColor="@color/black"
                            android:text="aaaaaaaa"
                            android:layout_weight="1"/>
                        <TextView
                            android:id="@+id/Miniprofile_date"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            style="@style/AppBodyFontText"
                            android:textColor="@color/black"
                            android:text="00/00/0000"
                            android:layout_weight="1.5"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="10dp">
                    <TextView
                        android:id="@+id/MiniProfile_today_grid_text"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:autoSizeTextType="uniform"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/MiniProfile_today_grid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="10dp" />
                    <TextView
                        android:id="@+id/MiniProfile_main_grid_text"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:autoSizeTextType="uniform"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/MiniProfile_main_grid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="10dp" />
                    <TextView
                        android:id="@+id/MiniProfile_Passion_grid_text"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:autoSizeTextType="uniform"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/MiniProfile_Passion_grid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="10dp" />
                    <TextView
                        android:id="@+id/MiniProfile_MissingNumbers_grid_text"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:autoSizeTextType="uniform"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/MiniProfile_MissingNumbers_grid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="10dp" />
                    <TextView
                        android:id="@+id/MiniProfile_Phrase_grid_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:autoSizeTextType="uniform"
                        android:layout_marginTop="20dp"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/MiniProfile_Phrase_grid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="10dp" />
                    <TextView
                        android:id="@+id/MiniProfile_Challange_grid_text"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:autoSizeTextType="uniform"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/MiniProfile_Challange_grid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="10dp" />
                    <TextView
                        android:id="@+id/MiniProfile_Agging_grid_text"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:autoSizeTextType="uniform"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/MiniProfile_Agging_grid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="10dp" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</FrameLayout>