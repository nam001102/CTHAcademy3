<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item
                android:top="2dp"
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp">
                <shape android:shape="oval">
                    <solid android:color="@android:color/transparent"/>
                </shape>
            </item>
            <item>
                <shape android:shape="oval">
                    <solid android:color="#3D4F75"/>
                </shape>
            </item>
            <item android:drawable="@drawable/dollar"
                android:right="8dp"
                android:left="8dp">
            </item>
            <item>
                <shape android:shape="oval">
                    <stroke android:width="1dp"
                        android:color="#ffffff"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_checked="false">
        <layer-list>
            <item
                android:top="2dp"
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp">
                <shape android:shape="oval">
                    <solid android:color="@android:color/transparent"/>
                </shape>
            </item>
            <item android:drawable="@drawable/dollar"
                android:right="8dp"
                android:left="8dp">
            </item>
            <item>
                <shape android:shape="oval">
                    <stroke android:width="1dp"
                        android:color="#ffffff"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>