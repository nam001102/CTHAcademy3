<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D9EBEB"
    tools:context=".FragmentShop">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="UselessParent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="20dp">
            <com.cthacademy.android.custom.SquareRelativeLayout
                android:id="@+id/BackBtn"
                android:layout_width="34dp"
                android:layout_height="match_parent">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="50dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_back_arrow_black"
                        android:padding="6dp"/>
                </androidx.cardview.widget.CardView>
            </com.cthacademy.android.custom.SquareRelativeLayout>
            <com.cthacademy.android.custom.SquareRelativeLayout
                android:layout_width="34dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_notification"
                    android:padding="6dp"/>
            </com.cthacademy.android.custom.SquareRelativeLayout>

        </RelativeLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_shop_title"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/Shop_profile_avatar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:riv_corner_radius="100dp"
                android:src="@color/white"/>
            <LinearLayout
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/Shop_profile_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="16sp"
                    android:text="Name Name Name Name Name"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/Shop_profile_point"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    style="@style/AppHeaddingFontText"
                    android:textSize="11sp"
                    android:text="999999999"
                    android:paddingStart="10dp"
                    android:textColor="@color/black"
                    android:layout_weight="2"
                    tools:ignore="RtlSymmetry" />
            </LinearLayout>

        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/ic_shop_categrory"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/Shop_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="20dp"/>
    </LinearLayout>

</FrameLayout>